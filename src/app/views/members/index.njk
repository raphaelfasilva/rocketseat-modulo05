{% extends "layout.njk" %}
{% block header %}
    <title>gym Manager - Membros</title>
{% endblock %}
{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/members/create">Novo</a>
            <form action="/members" method="get">
            <input 
            type="text"
            name="filter"
            placeholder"Filtrar por nome"
            value="{{filter}}"
            >
            <button type="submit">filtrar</button>
            </form>
        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>
                            {{ member.name }}
                        </td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.weight }}</td>
                        <td>{{ member.height }}</td>
                        <td>
                            <a href="/members/{{member.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="pagination"
         data-page={{pagination.page}}
         data-total={{pagination.total}}
         data-limit={{limit}}
         data-filter={{filter}}
        >
        </div>
    </div>
{% endblock %}