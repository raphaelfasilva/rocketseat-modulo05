{% extends "layout.njk" %}
{% block header %}
    <title>gym Manager - Membro</title>
{% endblock %}
{% block content %}
<div class="card">
    <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
    <section class="details">
                <h3>Detalhes</h3>
        <div class="item">
            <div>Nome</div>
            <div>{{member.name}}</div>
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <div>{{member.birth}}</div>
        </div>
        <div class="item">
            <div>E-mail</div>
            <div>{{member.email}}</div>
        </div>
        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
        </div>
        <div class="item">
            <div>Tipo Sangu√≠neo</div>
            <div>{{member.blood}}</div>
        </div>
       <div class="item">
            <div>Altura(cm)</div>
            <div>{{member.height}}</div>
        </div>
       <div class="item">
            <div>Peso(kg)</div>
            <div>{{member.weight}}</div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{member.created_at}}</div>
        </div>    
        <a href="/members/{{member.id}}/edit" class=button>Editar</a>   
    </section>
</div>
{% endblock %}