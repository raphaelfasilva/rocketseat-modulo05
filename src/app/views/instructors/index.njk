{% extends "layout.njk" %}
{% block header %}
    <title>gym Manager - Instrutores</title>
{% endblock %}
{% block content %}
    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>instrutor</th>
                    <th>Atendimento</th>
                    <th>Numero de membros</th>
                    <th>Ver</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>
                            {{ instructor.name }}
                        </td>
                        <td>{{ instructor.services }}</td>
                        <td>{{ instructor.total_students }}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}